{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "nameArg",
            "type": "promptString",
            "description": "Enter program argument for --name"
        },
        {
            "id": "inputArg",
            "type": "promptString",
            "description": "Enter program argument for --input",
            "default": "{\"runtime\": {\"task_queue_size\": 256, \"workers\": 4}}"
        }
    ],
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Rust Component Integration Tests Scenarios",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_test_scenarios",
                    "--package=rust_test_scenarios"
                ],
                "filter": {
                    "name": "rust_test_scenarios",
                    "kind": "bin"
                }
            },
            "args": [
                "--name",
                "${input:nameArg}",
                "--input-type",
                "arg",
                "--input",
                "${input:inputArg}"
            ],
            "cwd": "${workspaceFolder}/component_integration_tests/rust_test_scenarios"
        },
    ]
}
